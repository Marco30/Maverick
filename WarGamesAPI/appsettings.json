{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=UltimateAiDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "AppSettings": {
    //"JWtTokenValidMinutes": 30,
    "JWtTokenValidMinutes": 30,
    "JWtTimeLeftReminderMinutes": 5,
    "JwtSecret": "c0d69fcd-a5fb-4714-8573-2e978966cea7",
    "JwtIssuer": "WargamesAPI",
    "JwtAudience": "WarGamesUsers"
  },
  "MailSettings": {
    "Mail": "<fromemail>",
    "DisplayName": "<displayname>",
    "Password": "<yourpasswordhere>",
    "Host": "smtp.gmail.com",
    "Port": 587
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer", "Serilog.Expressions" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=(localdb)\\mssqllocaldb;Database=UltimateAiDb;Trusted_Connection=True;MultipleActiveResultSets=true",
          "tableName": "GptServiceLog",
          "autoCreateSqlTable": true,
          "restrictedToMinimumLevel": "Information",
          "filters": [
            {
              "Name": "ByIncludingOnly",
              "Args": {
                "expression": "StartsWith(Message, 'GptServiceLog')"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "WarGamesAPI"
    }
  }

}
